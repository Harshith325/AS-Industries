          $(document).ready(function() {
              $("#searchbox").on("keyup", function(){
                  var value = $(this).val().toLowerCase();
                  $('.col-lg-4').filter(function() {
                      $(this).toggle($(this).find('h4').text().toLowerCase().indexOf(value) > -1)
                  });
              });
          });

        </script>
    </body>
</html>